<a href="/movie/<%= movie.slug %>">
    <div class="card position-relative">
        <img src="/static/uploads/<%= movie.image %>" class="card-img-top" alt="<%= movie.turkish_name %>">
        <div class="position-absolute bottom-0 start-0">
            <h5 class="card-title text-warning ms-3 mb-1"><%= movie.original_name %></h5>
            <h5 class="card-title text-light ms-3 mb-3"><%= movie.turkish_name %></h5>
        </div>
        <div class="position-absolute top-0 end-0 pt-2 pe-2">
            <% movie.languages.forEach(ml => { %>
                <% if (ml === "subtitle") { %>
                    <img style="width: 40px; height:20px; object-fit:cover;" src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/a5/Flag_of_the_United_Kingdom_%281-2%29.svg/1200px-Flag_of_the_United_Kingdom_%281-2%29.svg.png" alt="" class="img-fluid">
                <% }else{ %>
                    <img style="width: 40px; height:20px; object-fit:cover;" src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b4/Flag_of_Turkey.svg/220px-Flag_of_Turkey.svg.png" alt="" class="img-fluid">
                <% } %>
            <% }) %>
        </div>
        <div class="position-absolute top-0 start-0 pt-2 ps-2">
            <span class="badge bg-primary"><%= movie.imdb %></span>
        </div>
    </div>
</a>