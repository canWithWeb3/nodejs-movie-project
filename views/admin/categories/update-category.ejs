<%- include('../../partials/_admin-html-start.ejs') %>

<div class="d-flex justify-content-between align-items-center">
    <h1 class="h3 mb-0"><%= title %></h1>
</div>
<hr>
<form method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <!-- name -->
    <div class="mb-3">
        <label for="name" class="form-label">Name:</label>
        <input 
            type="text" 
            name="name"
            id="name"
            class="form-control <%= errors.name && "is-invalid" %>"
            value="<%= typeof category != "undefined" ? category.name : old.name %>"
        >
        <% if (errors.name) { %>
            <div class="text-danger"><%= errors.name.msg %></div>
        <% } %>

    </div>

    <div class="text-end">
        <button type="submit" class="btn btn-warning"><%= title %></button>
    </div>
</form>

<%- include('../../partials/_admin-html-finish.ejs') %>